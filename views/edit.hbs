<h2> Update Pokemon Information </h2>
<main>
  <h3> Help us maintain our listings! </h3>
  <p> See something wrong with this listing? Fix it here. </p>

  <form class="form" action="/pokemon/{{npn}}?_method=Put" method="POST">

    <label for='npn'>National Pokemon Number:</label>
    <input name='npn' value={{npn}}>
    <label for='name'>Name:</label>
    <input name='name' value={{name}}>
    <label for='region'>Region:</label>
    <select id="region" name="region">
      <option value="Kanto">Kanto</option>
      <option value="Johto">Johto</option>
      <option value="{{region}}" selected>{{region}}</option>
    </select>
    <label for='typeOne'>Type(s):</label>
    <select id="typeOne" name="typeOne">
      <option>None</option>
      <option value="bug">Bug</option>
      <option value="dark">Dark</option>
      <option value="dragon">Dragon</option>
      <option value="electric">Electric</option>
      <option value="fairy">Fairy</option>
      <option value="fighting">Fighting</option>
      <option value="fire">Fire</option>
      <option value="flying">Flying</option>
      <option value="ghost">Ghost</option>
      <option value="grass">Grass</option>
      <option value="ground">Ground</option>
      <option value="ice">Ice</option>
      <option value="normal">Normal</option>
      <option value="poison">Poison</option>
      <option value="psychic" selected="selected">Psychic</option>
      <option value="rock">Rock</option>
      <option value="steel">Steel</option>
      <option value="water">Water</option>
      <option value="{{typeOne}}" selected>{{typeOne}}</option>
    </select>
    <select id="typeTwo" name="typeTwo">
      <option>None</option>
      <option value="bug">Bug</option>
      <option value="dark">Dark</option>
      <option value="dragon">Dragon</option>
      <option value="electric">Electric</option>
      <option value="fairy">Fairy</option>
      <option value="fighting">Fighting</option>
      <option value="fire">Fire</option>
      <option value="flying" selected="selected">Flying</option>
      <option value="ghost">Ghost</option>
      <option value="grass">Grass</option>
      <option value="ground">Ground</option>
      <option value="ice">Ice</option>
      <option value="normal">Normal</option>
      <option value="poison">Poison</option>
      <option value="psychic">Psychic</option>
      <option value="rock">Rock</option>
      <option value="steel">Steel</option>
      <option value="water">Water</option>
      <option value="{{typeTwo}}" selected>{{typeTwo}}</option>
    </select>
    <label for='description'>Description:</label>
    <textarea name='description'>
      {{description}}
    </textarea>
    <input type='submit' value='Update Listing'/>
  </form>
</main>
<aside>
  <form class="form" action="/pokemon/{{npn}}?_method=Delete" method="POST">
    <input  type='submit' value='Delete Listing'/>
  </form>
</aside>
<a href='/pokemon/{{npn}}'> < Back </a>
